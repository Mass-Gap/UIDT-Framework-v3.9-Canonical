# ============================================================================
# EDITORCONFIG - Konsistente Editor-Einstellungen
# ============================================================================
# Wird automatisch von VSCode und anderen Editoren erkannt
# Erzwingt konsistente Formatierung across alle Files & Editor

root = true

# ============================================================================
# DEFAULT FÜR ALLE DATEIEN
# ============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ============================================================================
# MARKDOWN - Spezialbehandlung für Dokumentation
# ============================================================================
[*.md]
# Markdown-Parser braucht trailing spaces für line breaks
trim_trailing_whitespace = false
indent_size = 2

# ============================================================================
# JSON - 2-Spaces Standard
# ============================================================================
[*.json]
indent_size = 2

# ============================================================================
# YAML - 2-Spaces Standard
# ============================================================================
[*.{yaml,yml}]
indent_size = 2

# ============================================================================
# MAKEFILE - Tab-indentation (erforderlich für Makefiles)
# ============================================================================
[Makefile]
indent_style = tab

# ============================================================================
# SHELL SCRIPTS
# ============================================================================
[*.{sh,bash,zsh}]
indent_size = 2

# ============================================================================
# PYTHON - PEP 8 Standard
# ============================================================================
[*.py]
indent_size = 4
max_line_length = 88

# ============================================================================
# LATEX/TEX
# ============================================================================
[*.{tex,latexmk}]
indent_size = 2
